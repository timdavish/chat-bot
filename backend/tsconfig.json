{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2022",

    /* Bundler mode */
    "moduleResolution": "NodeNext",

    /* Linting */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src"]
}
